<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutDots"
            android:layout_margin="7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/qstn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.How do you know about Application ?"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <RadioButton
                    android:id="@+id/rd1facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facebook" />

                <RadioButton
                    android:id="@+id/rd1google"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Google Search" />

                <RadioButton
                    android:id="@+id/rd1advertise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advertisement" />

                <RadioButton
                    android:id="@+id/rd1friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Friend" />


            </RadioGroup>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt1_friend_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Name Of Your Friend" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt1_friend_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Mobile Number Of Your Friend" />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/qstn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.Is Your shop  on ground floor or 1st floor ?"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                >

                <RadioButton
                    android:id="@+id/rd2ground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ground Floor" />

                <RadioButton
                    android:id="@+id/rd2firstfloor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Floor" />

            </RadioGroup>


            <TextView
                android:id="@+id/qstn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3.Is Your shop roof is of slap or roofing sheet  ?"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                >

                <RadioButton
                    android:id="@+id/rd3slap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Slap" />

                <RadioButton
                    android:id="@+id/rd3roof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Roof Sheet" />

            </RadioGroup>

            <TextView
                android:id="@+id/qstn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4.Is there any ATM within 300 meter ?"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                >

                <RadioButton
                    android:id="@+id/rd4yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/rd4no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No" />


            </RadioGroup>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt4_bank_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Bank Name" />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/qstn5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5.Is there any ATM within 500 meter ?"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                >

                <RadioButton
                    android:id="@+id/rd5yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/rd5no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No" />


            </RadioGroup>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt5_bank_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Bank Name" />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/qstn6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6.Is you shop area is crowded (High footfall )?"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                >

                <RadioButton
                    android:id="@+id/rd6yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/rd6no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No" />
            </RadioGroup>

            <TextView
                android:id="@+id/qstn7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7.When there is high footfall ?"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                >

                <RadioButton
                    android:id="@+id/rd7am"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AM" />

                <RadioButton
                    android:id="@+id/rd7pm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PM" />
            </RadioGroup>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt8_bank_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="8.What is the reason behind high footfall ?" />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/qstn9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9.Which of the following POI is within 100 mt from your shop ?"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                >

                <RadioButton
                    android:id="@+id/rd9garden"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Garden" />


                <RadioButton
                    android:id="@+id/rd9school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="School" />

                <RadioButton
                    android:id="@+id/rd9market"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vegetable Market" />

                <RadioButton
                    android:id="@+id/rd9bus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bus Stop" />

                <RadioButton
                    android:id="@+id/rd9hospital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hospital" />

                <RadioButton
                    android:id="@+id/rd9temples"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temples" />

                <RadioButton
                    android:id="@+id/rd9churches"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Churches" />

                <RadioButton
                    android:id="@+id/rd9mosques"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mosques" />

            </RadioGroup>

            <TextView
                android:id="@+id/qstn10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10.Is there any ATM shop having 2 ATM machines within 100 meter  ?"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                >

                <RadioButton
                    android:id="@+id/rd10yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/rd10no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No" />
            </RadioGroup>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/floating_login"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"></LinearLayout>


</RelativeLayout>